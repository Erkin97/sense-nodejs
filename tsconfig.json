{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "build",
        "rootDir": "src",
        "target": "es5",
        "downlevelIteration": true,
        "declaration": true,
        "sourceMap": true
    },
    "include":[
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}